{%- if context.cors_enabled %}
<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:plone="http://namespaces.plone.org/plone"
    >
  <include package="plone.rest" file="meta.zcml" />
  <plone:CORSPolicy
      allow_origin="{{ context.cors_allow_origin }}"
      allow_credentials="{{ context.cors_allow_credentials }}"
      allow_methods="{{ context.cors_allow_methods }}"
      expose_headers="{{ context.cors_expose_headers }}"
      allow_headers="{{ context.cors_allow_headers }}"
      max_age="{{ context.cors_max_age }}"
      />
</configure>
{%- endif %}
